<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.kira.wetalker.frags.assist.PermissionsFragment">

<android.support.design.widget.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:textAlignment="center"
        app:title="@string/title_assist_permissions"
        app:titleTextAppearance="@style/TextAppearance.AppCompat.Medium"
        app:titleTextColor="@color/textPrimary"/>
</android.support.design.widget.AppBarLayout>
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/len_92"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/len_16"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_network_title"
                style="@style/PermissionTitle"
                android:text="@string/label_permission_network"
               />
            <TextView
                android:id="@+id/text_network_desc"
                style="@style/PermissionDesc"
                android:text="@string/label_permission_network_desc"

                android:layout_below="@id/text_network_title"/>
            <ImageView

                android:id="@+id/iv_network"
                style="@style/PermissionImage"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/len_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_read_title"
                style="@style/PermissionTitle"
                android:text="@string/label_permission_read"
                />
            <TextView
                android:id="@+id/text_read_desc"
                style="@style/PermissionDesc"
                android:text="@string/label_permission_read_desc"

                android:layout_below="@id/text_read_title"/>
            <ImageView

                android:id="@+id/iv_read"
                style="@style/PermissionImage"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/len_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_write_title"
                style="@style/PermissionTitle"
                android:text="@string/label_permission_write"
                />
            <TextView
                android:id="@+id/text_write_desc"
                style="@style/PermissionDesc"
                android:text="@string/label_permission_write_desc"

                android:layout_below="@id/text_write_title"/>
            <ImageView
                android:id="@+id/iv_write"
                style="@style/PermissionImage"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/len_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_audio_title"
                style="@style/PermissionTitle"
                android:text="@string/label_permission_record_audio"
                />
            <TextView
                android:id="@+id/text_audio_desc"
                style="@style/PermissionDesc"
                android:text="@string/label_permission_record_audio_desc"

                android:layout_below="@id/text_audio_title"/>
            <ImageView
                android:id="@+id/iv_audio"
                style="@style/PermissionImage"/>
        </RelativeLayout>
        <net.qiujuer.genius.ui.widget.Button
            android:id="@+id/btn_submit"
            android:layout_width="@dimen/len_172"
            android:layout_height="@dimen/len_44"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/len_48"
            android:layout_marginTop="@dimen/len_48"
            android:background="@drawable/sel_btn_bg_accent_44"
            android:text="@string/label_permission_submit"
            android:textColor="@color/white"
            app:gTouchColor="@color/white_alpha_48"
            app:gTouchCornerRadius="22dp"
            app:gTouchEffect="ripple" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>

